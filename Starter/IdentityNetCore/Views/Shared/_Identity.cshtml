@{
    var loggedIn = User.Identity.IsAuthenticated;
}

@if (loggedIn)
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Identity" asp-action="Signout">Privacy</a>
    </li>    
    <li class="nav-item">
        <label>Hell @User.Identity.Name</label>
    </li>    
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Identity" asp-action="Signup">Signup</a>
    </li>    
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Identity" asp-action="Signin">Signin</a>
    </li>    

}
